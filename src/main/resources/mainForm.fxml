<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="dashboardForm" prefHeight="650.0" prefWidth="1000.0" style="-fx-background-color: linear-gradient(to right, #5d2f77, #934790);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.orm_final.controller.MainFormController">

    <children>

        <!-- Right side content area -->
        <AnchorPane fx:id="changeForm" layoutX="220.0" layoutY="10.0" prefHeight="630.0" prefWidth="770.0" style="-fx-background-color: white;                            -fx-background-radius: 15;                            -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 5);" />

        <!-- Sidebar image (logo/user profile) -->
        <ImageView fitHeight="119.0" fitWidth="184.0" layoutX="40.0" layoutY="27.0" pickOnBounds="true" preserveRatio="true" style="-fx-background-radius: 50;">
            <image>
                <Image url="@images/Elite Driving School (1).png" />
            </image>
        </ImageView>

        <!-- Sidebar Menu -->
        <VBox layoutX="15.0" layoutY="165.0" prefHeight="380.0" prefWidth="190.0" spacing="12.0" style="-fx-background-color: rgba(255,255,255,0.2);                      -fx-background-radius: 15; -fx-padding: 10;">
            <children>
                <JFXButton fx:id="btnDashboard" onAction="#btnDashboardOnAction" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: transparent; -fx-text-fill: white;                                   -fx-font-size: 16px; -fx-background-radius: 10; -fx-border-color: white;                                   -fx-border-width: 2; -fx-border-radius: 10;" text="Dashboard">
                    <font>
                        <Font name="Arial Bold" size="16.0" />
                    </font>
                </JFXButton>

                <JFXButton fx:id="btnStudent" onAction="#btnStudentOnAction" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: transparent; -fx-text-fill: white;                                   -fx-font-size: 16px; -fx-background-radius: 10; -fx-border-color: white;                                   -fx-border-width: 2; -fx-border-radius: 10;" text="Manage Student" />

                <JFXButton fx:id="btnProgram" onAction="#btnProgramOnAction" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: transparent; -fx-text-fill: white;                                   -fx-font-size: 16px; -fx-background-radius: 10; -fx-border-color: white;                                   -fx-border-width: 2; -fx-border-radius: 10;" text="Manage Course" />

                <JFXButton fx:id="btnInstructor" onAction="#btnInstructorOnAction" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: transparent; -fx-text-fill: white;                                   -fx-font-size: 16px; -fx-background-radius: 10; -fx-border-color: white;                                   -fx-border-width: 2; -fx-border-radius: 10;" text="Manage Instructor" />

                <JFXButton fx:id="btnPayment" onAction="#btnPaymentOnAction" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: transparent; -fx-text-fill: white;                                   -fx-font-size: 16px; -fx-background-radius: 10; -fx-border-color: white;                                   -fx-border-width: 2; -fx-border-radius: 10;" text="Manage Payment" />

                <JFXButton fx:id="btnLessons" onAction="#btnLessonsOnAction" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: transparent; -fx-text-fill: white;                                   -fx-font-size: 16px; -fx-background-radius: 10; -fx-border-color: white;                                   -fx-border-width: 2; -fx-border-radius: 10;" text="Manage Lessons" />

                <JFXButton fx:id="btnView" onAction="#btnViewOnAction" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: transparent; -fx-text-fill: white;                                   -fx-font-size: 16px; -fx-background-radius: 10; -fx-border-color: white;                                   -fx-border-width: 2; -fx-border-radius: 10;" text="View All" />

                <JFXButton fx:id="btnSetting" onAction="#btnSettingOnAction" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: transparent; -fx-text-fill: white;                                   -fx-font-size: 16px; -fx-background-radius: 10; -fx-border-color: white;                                   -fx-border-width: 2; -fx-border-radius: 10;" text="Settings" />
            </children>
        </VBox>

        <!-- Logout Icon -->
        <ImageView fx:id="btnback" fitHeight="40.0" fitWidth="40.0" layoutX="95.0" layoutY="600.0" onMouseClicked="#logOutAction" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
            <image>
                <Image url="@images/backward.gif" />
            </image>
        </ImageView>
    </children>
</AnchorPane>
