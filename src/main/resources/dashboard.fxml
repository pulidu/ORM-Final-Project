<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="dashboardForm" prefHeight="630.0" prefWidth="770.0"
            style="-fx-background-color: linear-gradient(to bottom, #84e4cc, #023e8a);"
            xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.orm_final.controller.DashboardController">

    <!-- Dashboard Title -->
    <Label layoutX="120.0" layoutY="40.0" text="Dashboard"
           style="-fx-text-fill: #000000;">
        <font>
            <Font name="Segoe UI Bold" size="32.0"/>
        </font>
    </Label>

    <!-- Dashboard Icon -->
    <ImageView fitHeight="50.0" fitWidth="50.0" layoutX="50.0" layoutY="35.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@images/dashboard.gif"/>
        </image>
    </ImageView>

    <!-- Total Students Card -->
    <Pane layoutX="30.0" layoutY="138.0" prefHeight="100.0" prefWidth="220.0"
          style="-fx-background-radius: 20; -fx-background-color: linear-gradient(to bottom right, #2c3e50, #34495e); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 15, 0, 0, 5);">
        <children>
            <ImageView layoutX="15.0" layoutY="30.0" fitHeight="40.0" fitWidth="40.0">
                <image>
                    <Image url="@images/students.gif"/>
                </image>
            </ImageView>
            <Label layoutX="60.0" layoutY="15.0" text="Total Students"
                   style="-fx-text-fill: #ecf0f1;">
                <font>
                    <Font name="Segoe UI Bold" size="20.0"/>
                </font>
            </Label>
            <Label fx:id="lblTotalStudent" alignment="CENTER" layoutX="85.0" layoutY="50.0" prefHeight="30.0" prefWidth="50.0" text="0"
                   style="-fx-text-fill: #f39c12;">
                <font>
                    <Font name="Segoe UI Bold" size="26.0"/>
                </font>
            </Label>
        </children>
    </Pane>

    <!-- Total Courses Card -->
    <Pane layoutX="276.0" layoutY="138.0" prefHeight="100.0" prefWidth="220.0"
          style="-fx-background-radius: 20; -fx-background-color: linear-gradient(to bottom right, #8e44ad, #9b59b6); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 15, 0, 0, 5);">
        <children>
            <ImageView layoutX="15.0" layoutY="30.0" fitHeight="40.0" fitWidth="40.0">
                <image>
                    <Image url="@images/ebook.gif"/>
                </image>
            </ImageView>
            <Label layoutX="60.0" layoutY="15.0" text="Total Courses"
                   style="-fx-text-fill: #ecf0f1;">
                <font>
                    <Font name="Segoe UI Bold" size="20.0"/>
                </font>
            </Label>
            <Label fx:id="lblTotalPrograms" alignment="CENTER" layoutX="85.0" layoutY="50.0" prefHeight="30.0" prefWidth="50.0" text="0"
                   style="-fx-text-fill: #e67e22;">
                <font>
                    <Font name="Segoe UI Bold" size="26.0"/>
                </font>
            </Label>
        </children>
    </Pane>

    <!-- Total Instructors Card -->
    <Pane layoutX="520.0" layoutY="138.0" prefHeight="100.0" prefWidth="220.0"
          style="-fx-background-radius: 20; -fx-background-color: linear-gradient(to bottom right, #16a085, #1abc9c); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 15, 0, 0, 5);">
        <children>
            <ImageView layoutX="15.0" layoutY="30.0" fitHeight="40.0" fitWidth="40.0">
                <image>
                    <Image url="@images/teacher.gif"/>
                </image>
            </ImageView>
            <Label layoutX="60.0" layoutY="15.0" text="Total Instructors"
                   style="-fx-text-fill: #ecf0f1;">
                <font>
                    <Font name="Segoe UI Bold" size="20.0"/>
                </font>
            </Label>
            <Label fx:id="lblTotalInstructor" alignment="CENTER" layoutX="85.0" layoutY="50.0" prefHeight="30.0" prefWidth="50.0" text="0"
                   style="-fx-text-fill: #2ecc71;">
                <font>
                    <Font name="Segoe UI Bold" size="26.0"/>
                </font>
            </Label>
        </children>
    </Pane>

    <!-- Table of Students -->
    <TableView fx:id="tblStudyAll" layoutX="28.0" layoutY="260.0" prefHeight="150.0" prefWidth="701.0">
        <columns>
            <TableColumn fx:id="colId" text="Student ID" prefWidth="200.0"/>
            <TableColumn fx:id="colName" text="Name" prefWidth="300.0"/>
            <TableColumn fx:id="colDate" text="Registration Date" prefWidth="200.0"/>
        </columns>
    </TableView>

    <!-- Student count label (important - must match controller) -->
    <Label layoutX="28.0" layoutY="420.0" text="Students:" style="-fx-text-fill: #000000;">
        <font>
            <Font name="Segoe UI Semibold" size="14.0"/>
        </font>
    </Label>
    <Label fx:id="lblStudentCount" alignment="CENTER_LEFT" layoutX="88.0" layoutY="419.0" prefHeight="20.0" prefWidth="60.0" text="0"
           style="-fx-text-fill: #ffffff;">
        <font>
            <Font name="Segoe UI Bold" size="14.0"/>
        </font>
    </Label>

    <!-- Bar Chart -->
    <BarChart fx:id="BarChartStu" layoutX="28.0" layoutY="450.0" prefHeight="150.0" prefWidth="701.0"
              style="-fx-background-radius: 15; -fx-background-color: rgb(255,255,255);">
        <xAxis>
            <CategoryAxis side="BOTTOM"/>
        </xAxis>
        <yAxis>
            <NumberAxis side="LEFT"/>
        </yAxis>
    </BarChart>

    <!-- Monthly Income -->
    <Label layoutX="385.0" layoutY="610.0" text="Monthly Income:" style="-fx-text-fill: #000000;">
        <font>
            <Font name="Segoe UI Semibold" size="20.0"/>
        </font>
    </Label>
    <Label fx:id="lblIncom" alignment="CENTER" layoutX="550.0" layoutY="607.0" prefHeight="30.0" prefWidth="206.0" text="0"
           style="-fx-text-fill: #fefffe;">
        <font>
            <Font name="Segoe UI Bold" size="24.0"/>
        </font>
    </Label>

</AnchorPane>
