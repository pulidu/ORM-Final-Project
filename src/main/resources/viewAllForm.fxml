<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="800.0"
            style="-fx-background-color: linear-gradient(to bottom right, #84e4cc, #023e8a);"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.orm_final.controller.ViewAllFormController">

    <children>
        <!-- Header -->
        <HBox layoutX="40.0" layoutY="25.0" spacing="15.0"
              style="-fx-background-color: rgba(0,0,0,0.7); -fx-background-radius: 15; -fx-padding: 15;">
            <children>
                <ImageView fitHeight="70" fitWidth="70" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/view.gif"/>
                    </image>
                </ImageView>

                <Label text="View Students" textFill="white">
                    <font>
                        <Font name="Segoe UI Bold" size="28.0"/>
                    </font>
                </Label>
            </children>
        </HBox>

        <!-- Controls Section -->
        <VBox layoutX="50.0" layoutY="130.0" spacing="20.0"
              style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 5);">
            <children>
                <HBox spacing="15.0">
                    <children>
                        <Label text="Select Program :" prefWidth="150.0"/>
                        <ChoiceBox fx:id="selectPrgramChoiceBox"
                                   prefWidth="250.0"
                                   style="-fx-background-radius: 10; -fx-border-color: #CCCCCC;"/>
                        <!-- Refresh Button -->
                        <HBox alignment="CENTER" onMouseClicked="#refreshTblOnClickAction"
                              style="-fx-background-color: #1E90FF; -fx-background-radius: 10; -fx-cursor: hand;"
                              prefWidth="45" prefHeight="40">
                            <children>
                                <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@images/refresh.gif"/>
                                    </image>
                                </ImageView>
                            </children>
                        </HBox>
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- Table -->
        <TableView fx:id="viewTbl" layoutX="50.0" layoutY="240.0"
                   prefHeight="280.0" prefWidth="700.0"
                   style="-fx-background-radius: 15; -fx-border-radius: 15; -fx-border-color: #DDD;">
            <columns>
                <TableColumn fx:id="colStudentId" prefWidth="100.0" text="Student ID"/>
                <TableColumn fx:id="colStudentName" prefWidth="160.0" text="Student Name"/>
                <TableColumn fx:id="colRegisterDate" prefWidth="140.0" text="Register Date"/>
                <TableColumn fx:id="colInstallment" prefWidth="140.0" text="1st Installment"/>
                <TableColumn fx:id="colBalance" prefWidth="120.0" text="Balance"/>
                <TableColumn fx:id="colPayment" prefWidth="120.0" text="Payment"/>
            </columns>
        </TableView>

        <!-- Footer with Count -->
        <HBox layoutX="450.0" layoutY="560.0" spacing="10.0">
            <children>
                <Label text="Student Count :" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #000000;"/>
                <Label fx:id="lblStudentCount" text="0"
                       style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #000000;"/>
            </children>
        </HBox>
    </children>
</AnchorPane>